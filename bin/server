#!/usr/bin/env node

var http = require('http'),
    util = require('util'),
    interval = 1000,
    message = 'This is a log spamming app! It spams logs every '
      + interval + ' milliseconds!';

http.createServer(function (req, res) {
  res.writeHead(200, {'Content-Type': 'text/plain'});
  res.end(message);
}).listen(8080);


setInterval(function () {
  util.log(message);
  console.error('(This is a log spammed onto stderr)');
}, interval);
